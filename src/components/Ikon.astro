---
const {ikon,titel,tekst} = Astro.props
---

<div class="card">
<img src={ikon} alt="ikon">
<h3>{titel}</h3>
<p>{tekst}</p>
</div>


<style>
img {
    margin-inline: var(--spacing-generel);
    width: 13.25rem;
    margin-top: 5rem;
    margin-bottom: var(--spacing-generel);

}

.card{
   
    width: 20rem;
    justify-items: center;
   
}
@media (min-width: 1000px) {
img {
    margin:  var(--spacing-generel);
    width: 13.25rem;

}

.card{
   
    width: 20rem;
    justify-items: center;
   
}

h3{
    margin-bottom: 1rem;
}
}

</style>