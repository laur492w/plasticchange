color: var(--grey-50-color);
font-family: "Campton-boldDEMO";
margin-top: var(--spacing-knapper-info);


}

.hero_h1{
  color: var(--grey-50-color);
  font-family: "Campton-boldDEMO";
  margin-top: var(--spacing-sub-header);
