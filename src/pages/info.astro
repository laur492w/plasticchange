    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    width: 100%;
}

.animationer img {
    width: 150px;
}


.container1{
    grid-column: span 2;
    justify-self: center;
     font-family: "Campton-boldDEMO";
}

.container2 {
    justify-self: end ;
    padding-right: 4rem;
     font-family: "Campton-boldDEMO";
}
.container3 {
   
     font-family: "Campton-boldDEMO";
}

.støtfordi_tekst{
color: var(--text-h1);
  margin:2rem;
  line-height: 1.75rem;
    width: 500px;
   }
   .plastikforurening{
    text-align: center;
    margin-top:8rem;
}

h2{
    font-size: 2.5rem;
    font-family: "Campton-boldDEMO";
}

.bidrag_tekst{
  max-width: 52rem;
    margin-inline:auto;
    font-size:1.25rem;
    color: var(--text-primary);
    margin-top: 2.5rem;
}

.bidrag_tekst2{
  margin-inline: 4rem;
    color: var(--text-primary);
    margin-top: 1rem;
    margin-bottom: 1rem;
    line-height: 1.75rem;
}

.opretnu{
    text-align: center;
    margin-inline:20rem;
    font-size:1.25rem;
    color: var(--text-primary);
    margin-top: 2.5rem;
}

/* til grafik i vandet */
.vibrate-1 {
	-webkit-animation: vibrate-1 3s linear infinite both;
	        animation: vibrate-1 3s linear infinite both;
}


 @keyframes vibrate-1{0%{transform:translate(0)}20%{transform:translate(-2px,2px)}40%{transform:translate(-2px,-2px)}60%{transform:translate(2px,2px)}80%{transform:translate(2px,-2px)}100%{transform:translate(0)}}

 .vibrate-2{animation:vibrate-2 3s ease-in-out infinite both}


@keyframes vibrate-2{0%{transform:translate(0)}20%{transform:translate(-2px,2px)}40%{transform:translate(-2px,-2px)}60%{transform:translate(2px,2px)}80%{transform:translate(2px,-2px)}100%{transform:translate(0)}}
   .h1_støtfordi{
    font-size: 3.75rem;
    margin:2rem;
    color: var(--text-h1);
    width: 500px;
}

.vibrate-3{animation:vibrate-3 4s ease-in-out infinite both}

@keyframes vibrate-3{0%{transform:translate(0)}20%{transform:translate(-2px,2px)}40%{transform:translate(-2px,-2px)}60%{transform:translate(2px,2px)}80%{transform:translate(2px,-2px)}100%{transform:translate(0)}}


/* til overskrift */
.tilt-in-left-1{animation:tilt-in-left-1 1.5s cubic-bezier(.25,.46,.45,.94) both}

 @keyframes tilt-in-left-1{0%{transform:rotateX(-30deg) translateX(-300px) skewX(-30deg);opacity:0}100%{transform:rotateX(0deg) translateX(0) skewX(0deg);opacity:1}}

   }

 /* til infotekster */
 .scale-in-center {
    animation: scale-in-center .5s cubic-bezier(.25,.46,.45,.94) both;
}

 @keyframes scale-in-center{0%{transform:scale(0);opacity:1}100%{transform:scale(1);opacity:1}}




/* til infografikker 1 og 3 */
.slide-in-left{animation:slide-in-left .8s cubic-bezier(.25,.46,.45,.94) both}

 @keyframes slide-in-left{0%{transform:translateX(-1000px);opacity:0}100%{transform:translateX(0);opacity:1}}

/* til infografikker 2 */
 .slide-in-right{animation:slide-in-right .8s cubic-bezier(.25,.46,.45,.94) both}
@keyframes slide-in-right{0%{transform:translateX(1000px);opacity:0}100%{transform:translateX(0);opacity:1}}
</style>

<script>
    import { gsap } from "gsap";
        
        import { ScrollTrigger } from "gsap/ScrollTrigger";

        gsap.registerPlugin(ScrollTrigger);
gsap.matchMedia().add("(prefers-reduced-motion: no-preference)", () => {
  const sections = document.querySelectorAll("section");
  sections.forEach((section) => {
    const ps = section.querySelectorAll(".section1 p");
    gsap
      .timeline({
        scrollTrigger: {
          trigger: section,
          start: "top 90%", // Animationen sættes igang, når toppen a section-elementet rammer 50% ind i viewporten
          end: "+=300px", // Animationen er slut, når man har scrollet 200px ned
          scrub: 0.2, // Animationen bindes op på scrollbaren
        },
      })
      .from(ps, {
        opacity: 0,
        y: 20,
        stagger: 0.5,
      });
  });
});
     


gsap.to(".grafik1", {
         scrollTrigger: {
             trigger: ".grafik1", 
             start: "top 70%",
             toggleClass:"slide-in-left",
      },
       
      });

      gsap.to(".grafik2", {
         scrollTrigger: {
             trigger: ".grafik2", 
             start: "top 50%",
             toggleClass:"slide-in-left",

      },
       
      });

      gsap.to(".grafik3", {
         scrollTrigger: {
             trigger: ".grafik3", 
             start: "top 50%",
             toggleClass:"slide-in-left",
      },
       
      });

 
    </script>