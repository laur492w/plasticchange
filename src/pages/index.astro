---
import Layout from "../layouts/Layout.astro";
import "../styles/style.css";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import Ikon from "../components/Ikon.astro";
import Button from "../components/Button.astro"
---

<Layout>
<Nav/>
<Hero/>
<h2 class="bidragtilfremtiden">Bidrag til fremtiden</h2>
<p class="bidrag_tekst">Plastic Change kæmper vi for at ændre den forfærdelige situation vi står i, og den fremtid vi går i møde.<br><br> Vi arbejder hele tiden med problemet fra flere sider, der skal gøre op med hvordan vi bruger plastik, så vi kan spare på jordens ressourcer når vi producerer, og samtidig forhindre at det ender som affald og forurening, når vi er færdige med det.</p>
<h2 class="værdatvide">Værd at vide</h2>
<div class="ikoner">
<Ikon titel = "Oprettelse af testamente er gratis, når du støtter velgørenhed" tekst = "Oprettelse af testamente behøver ikke være dyrt. Hos Dokument24.dk er det gratis, hvis du betænker Plastic Change. Her kan du altså spare en advokat, som ellers ville kunne hjælpe mod betaling, til 3.000-8.000 kr." ikon = "../img/ikon_money.svg" />
<Ikon titel = "Dine arvinger kan få mere ud af arven, når du støtter velgørenhed" tekst = "Optimer arven ved at betænke velgørende organisationer som delvis arving, fritaget for arveafgift, og på den måde frigøre midler til øvrige arvinger." ikon = "../img/ikon_hand.svg"/>
<Ikon titel = "Du kan altid ændre eller tilbagekalde testamentet" tekst = "Dit testamente kan til enhver tid ændres eller tilbagekaldes. Opretter du et testamente i fællesskab med din ægtefæller eller partner, bør det fremgå af testamentet, om længstlevende skal have mulighed for at ændre i testamentet." ikon = "../img/ikon_test.svg"/>
<Ikon titel = "Spørgsmål eller hjælp til din støtte" tekst = "Kontakt  info@plasticchange.org, hvis du har spørgsmål eller brug for hjælp til din støtte. Vi er klar til at hjælpe." ikon = "../img/ikon_letter.svg"/>
</div>
<div class="toknapper">
    <div class="testamente-stor">
        <Button variant="testamente-stor" tekst= "Opret testamente"/>
        </div>
<div class="testamente-stor">
<Button variant="støt" tekst= "Støt fordi..."/>
</div>

</div>


<Footer/>
</Layout>


<style>
.bidragtilfremtiden{
    text-align: center;
    margin-top:8rem;
   
}

.bidrag_tekst{
  margin-inline: 4rem;
    color: var(--text-primary);
    margin-top: 2.5rem;
}

.værdatvide{
    text-align: center;
    margin-top:9rem;
  
   
}
.ikoner{
    justify-items: center;
    margin-inline: 5rem;
}

.testamente-stor{
margin-top: 5rem;
margin-inline: 5rem;
}


@media (min-width: 1000px) {
    .ikoner {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-info-grid);
        justify-items: center;
        margin-inline: 18rem;
    }

    
.testamente-stor{
display: flex;
margin-top: 1rem;
justify-content:center;
 
}

h2{
    font-size: 2.5rem;
}


.bidragtilfremtiden{
    text-align: center;
    margin-top:8rem;
   
}

.bidrag_tekst{
    text-align: center;
    margin-inline:20rem;
    font-size:1.25rem;
    color: var(--text-primary);
    margin-top: 2.5rem;
}

.værdatvide{
    text-align: center;
    margin-top:9rem;
    margin-bottom: 2.5rem;
   
}
}
</style>

